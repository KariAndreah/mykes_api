{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "/**/*.ts",
    "index.ts",
    "src/services/mics.service.ts",
    "src/routes/routes.ts",
    "src/controllers/mics.controller.ts"
  ],
  "exclude": ["node_modules"],
  "lib": ["es2015"],
  "ts-node": {
    "esm": true // «———— enabling ESM for ts-node
  }
}
